<Any>
    <ClearValue Key="Enemy"></ClearValue>
    <ClearValue Key="Player"></ClearValue>

    <GetAllVisible Type="Tiles" Key="Tiles"></GetAllVisible>
    <GetAllVisible Type="Enemies" Key="Enemies"></GetAllVisible>
    <GetAllVisible Type="Allies" Key="Allies"></GetAllVisible>
    <Pick Criteria="Closest" Input="Enemies" Output="Enemy"></Pick>
    <ConvertTo Input="Enemy" Output="EnemyPos" Type="Position"></ConvertTo>

    <Pick Criteria="Player" Output="Player"></Pick>
    <ConvertTo Input="Player" Output="PlayerPos" Type="Position"></ConvertTo>

    <Priority>
        <Import Path="useAbility.xml"></Import>
		<Import Path="attackClosest.xml"></Import>
		<Sequence>
		    <MoveTo Key="PlayerPos" Dst="2"/>
            <ClearValue Key="PlayerPos"></ClearValue>
		</Sequence>
		<Random>
			<Wait></Wait>
            <Wait></Wait>
            <Wait></Wait>
			<Import Path="wander.xml"></Import>
		</Random>
    </Priority>

    <Exclaim TilesKey="Tiles"></Exclaim>
</Any>