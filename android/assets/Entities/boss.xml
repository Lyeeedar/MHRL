                <Effects>
                    <OnAll>
                        <Group Name="">
                            <Damage>
                                <Physical_Attack>100</Physical_Attack>
                            </Damage>
                        </Group>
                    </OnAll>
                </Effects>

            </Attack>

        </Attacks>

        <Combos>

            <Combo Name="TripleStab" Weight="1">
                <Stab></Stab>
                <Stab CanEnd="true" CanTurn="true" CanMove="true"></Stab>
                <Stab CanEnd="true" CanTurn="true" CanMove="true"></Stab>
            </Combo>

            <Combo Name="TripleSwipe" Weight="1">
                <Swipe></Swipe>
                <Swipe CanEnd="true" CanTurn="true" CanMove="true"></Swipe>
                <Swipe CanEnd="true" CanTurn="true" CanMove="true"></Swipe>
            </Combo>

        </Combos>
