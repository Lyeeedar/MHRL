                    <Row>..#..</Row>
                    <Row>..@..</Row>
                    <Row>.....</Row>
                </HitPattern>

                <HitType>All</HitType>

                <ReadyType>Closest</ReadyType>

                <ReadySprite>
                    <Name>EffectSprites/Thrust/Thrust_1</Name>
