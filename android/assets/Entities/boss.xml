                <HitSprite>
                    <Name>EffectSprites/Thrust/Thrust</Name>
                    <UpdateRate>0.1</UpdateRate>
                </HitSprite>

                <Effects>
                    <OnAll>
                        <Group Name="">
                            <Damage>
                                <Physical_Attack>100</Physical_Attack>
                            </Damage>
                        </Group>
                    </OnAll>
                </Effects>

            </Attack>

            <Attack>
